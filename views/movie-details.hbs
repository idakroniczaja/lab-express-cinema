

<section id='movieDetails'>

<div>
  <img src="{{movie.image}}" alt="{{movie.name}} poster"/>
</div>

<div>
  <a href="/movies">Go back</a>

<h3>{{movie.title}}</h1>
<h4>{{movie.director}}</h2>
<ul>
  <h3>Stars</h3>
  {{#each movie.stars}}
  <li>{{this}}</li>
  {{/each}}
</ul>

<p>{{movie.description}}</p>

<p>{{#each movie.showtimes}}
  {{this}}|
  {{/each}}
</p>
</div>


</section>


